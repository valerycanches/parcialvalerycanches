<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".play"
    android:background="@color/colorFondo">

    <TextView
        android:id="@+id/textView"
        android:layout_width="148dp"
        android:layout_height="40dp"
        android:layout_marginTop="28dp"
        android:text="MICHITO"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text=" -> 0"
        android:drawableLeft="@drawable/equismini"
        android:textSize="22sp"
        app:layout_constraintEnd_toStartOf="@+id/tvo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/tvo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="104dp"
        android:text=" -> 0"
        android:drawableLeft="@drawable/circulomini"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorBoton"
        android:onClick="Reiniciar"
        android:text="REINICIAR"
        android:textColor="@color/blanco"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ly8" />

    <LinearLayout
        android:id="@+id/ly5"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvx"
        android:background="@color/blanco"></LinearLayout>

    <LinearLayout
        android:id="@+id/ly2"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:orientation="vertical"
        android:layout_marginBottom="3dp"
        app:layout_constraintBottom_toTopOf="@+id/ly5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/blanco"></LinearLayout>

    <LinearLayout
        android:id="@+id/ly4"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:orientation="horizontal"
        android:layout_marginEnd="3dp"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toStartOf="@+id/ly5"
        app:layout_constraintTop_toBottomOf="@+id/tvx"
        android:background="@color/blanco"></LinearLayout>

    <LinearLayout
        android:id="@+id/ly8"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:orientation="horizontal"
        android:layout_marginTop="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ly5"
        android:background="@color/blanco"></LinearLayout>

    <LinearLayout
        android:id="@+id/ly6"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:orientation="horizontal"
        android:layout_marginStart="3dp"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintStart_toEndOf="@+id/ly5"
        app:layout_constraintTop_toBottomOf="@+id/tvo"
        android:background="@color/blanco"></LinearLayout>

    <LinearLayout
        android:id="@+id/ly1"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:orientation="horizontal"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="3dp"
        app:layout_constraintBottom_toTopOf="@+id/ly4"
        app:layout_constraintEnd_toStartOf="@+id/ly2"
        android:background="@color/blanco"></LinearLayout>

    <LinearLayout
        android:id="@+id/ly3"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:orientation="horizontal"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="3dp"
        app:layout_constraintBottom_toTopOf="@+id/ly6"
        app:layout_constraintStart_toEndOf="@+id/ly2"
        android:background="@color/blanco"></LinearLayout>

    <LinearLayout
        android:id="@+id/ly7"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:orientation="horizontal"
        android:layout_marginEnd="3dp"
        android:layout_marginTop="3dp"
        app:layout_constraintEnd_toStartOf="@+id/ly8"
        app:layout_constraintTop_toBottomOf="@+id/ly4"
        android:background="@color/blanco"></LinearLayout>

    <LinearLayout
        android:id="@+id/ly9"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:orientation="horizontal"
        android:layout_marginTop="3dp"
        android:layout_marginStart="3dp"
        app:layout_constraintStart_toEndOf="@+id/ly8"
        app:layout_constraintTop_toBottomOf="@+id/ly6"
        android:background="@color/blanco"></LinearLayout>

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorBoton"
        android:onClick="Salir"
        android:text="SALIR"
        android:textColor="@color/blanco"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button" />
</androidx.constraintlayout.widget.ConstraintLayout>